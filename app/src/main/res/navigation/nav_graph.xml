<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/profileListFragment">

    <fragment
        android:id="@+id/savedUsers"
        android:name="com.example.ichadomosesdisepexam.ui.SavedUsersFragment"
        android:label="Favourite"
        tools:layout="@layout/fragment_saved_users" >
        <action
            android:id="@+id/action_savedUsers_to_profileDetailsFragment"
            app:destination="@id/profileDetailsFragment"
            app:popUpTo="@id/profileDetailsFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/profileDetailsFragment"
        android:name="com.example.ichadomosesdisepexam.ui.ProfileDetailsFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile_details">
        <action
            android:id="@+id/action_profileDetailsFragment_to_savedUsers"
            app:destination="@id/savedUsers" />
        <argument
            android:name="userProfile"
            app:argType="com.example.ichadomosesdisepexam.model.ProfileResponse" />
        <action
            android:id="@+id/action_profileDetailsFragment_to_profileListFragment"
            app:destination="@id/profileListFragment"
            app:popUpTo="@id/profileListFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/profileListFragment"
        android:name="com.example.ichadomosesdisepexam.ui.ProfileListFragment"
        android:label="LAGOS GITHUB USERS"
        tools:layout="@layout/fragment_profile_list">
        <action
            android:id="@+id/action_profileListFragment_to_profileDetailsFragment"
            app:destination="@id/profileDetailsFragment" />
    </fragment>
</navigation>